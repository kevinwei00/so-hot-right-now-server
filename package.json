{
  "name": "so-hot-right-now-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "migrate": "postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "env SSL=true DATABASE_URL=$(heroku config:get DATABASE_URL) npm run migrate",
    "seed": "psql -f ./seeds/seed.all_tables.sql so-hot-right-now",
    "seed:production": "psql -f ./seeds/seed.all_tables.sql -d \"$(heroku config:get DATABASE_URL)\"",
    "predeploy": "npm audit && npm run migrate:production && npm run seed:production",
    "deploy": "git push heroku master"
  },
  "keywords": [],
  "engines": {
    "node": "12.8.0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "knex": "^0.20.1",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "postgrator-cli": "^3.3.0",
    "supertest": "^4.0.2"
  }
}
